<% @page_title = "Pages" %>

<div class="pages index">
	<h2>Pages</h2>

	<%= link_to("<< Back to Subjects", subjects_path, :class => 'back-link') %>


	<%= link_to("Add New Page", new_subject_page_path(@subject.id), :class => 'action new') %>

	<table class="listing" summary="Pages list">
		<tr class="header">
			<th>&nbsp;</th>
			<th>Page</th>
			<th>Permalink</th>
			<th>Visible</th>
			<th>Subject</th>
			<th>Sections</th>
			<th>Actions</th>
		</tr>
		<% @pages.each do |page| %>
		<tr>
			<td><%= page.position %></td>
			<td><%= page.name %></td>
			<td><%= page.permalink %></td>
			<td class="center"><%= status_tag(page.visible) %></td>
			<td><%= page.subject.name if page.subject %></td>
			<td class="center"><%= page.sections.size %></td>
			<td class="actions">
				<%= link_to("View Sections", {:controller => 'sections', :page_id => page.id}, :class => 'action show') %>
				<%= link_to("Show", subject_page_path(@subject.id, page.id), :class => 'action show') %>
				<%= link_to("Edit", edit_subject_page_path(@subject.id, page.id), :class => 'action edit') %>
				<%= link_to("Delete", delete_subject_page_path(@subject.id, page.id), :class => 'action delete') %>
			</td>
		</tr>
		<% end %>
	</table>
