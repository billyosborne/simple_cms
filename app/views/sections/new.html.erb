<% @page_title = "New Section" %>

<div class="sections new">
	<h2>Create Section</h2>

	<%= link_to("<< Back to List", {:action => 'index', :page_id => @page.id}, :class => 'back-link') %>

	<%= form_for(:section, :url => {:action => 'create', :page_id => @page.id}) do |f| %>

		<%= render(:partial => "form", :locals => {:f => f}) %>

		<div class="form-buttons">
			<%= submit_tag("Create Section") %>
		</div>

	<% end %>
</div>